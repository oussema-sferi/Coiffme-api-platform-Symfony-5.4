<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="CoiffMe">
    <meta name="author" content="CoiffMe">
    <title>Page de Paiement</title>
    <!-- Favicon -->
    <link rel="icon" href="{{ asset('assets/img/coiffme.png') }}" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body style="font-family: Georgia">
{#{{ dump(result["AccessKey"]) }}#}
<!-- Navbar -->
<!-- Main content -->
<div class="main-content">
    <!-- Header -->
    <div class="header py-7 py-lg-8 pt-lg-9">
        <div class="container">
            <div class="header-body text-center mb-7" style="margin-top: 60px">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                        <img src="{{ asset('assets/img/coiffme.png') }}" style="width: 80px" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
        </div>
    </div>
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card bg-secondary border-0 mb-0">
                    <div class="card-body px-lg-5 py-lg-5" style="background-color: white; color: orange">
                        <div class="text-center" style="font-family: courier; font-weight: bold">
                            Total à payer: {{ amount }} €
                        </div>
                        <br>
                        <div class="text-center text-muted mb-4">
                            <small>Carte Visa/Mastercard</small>
                        </div>
                        <form action="{{ result["CardRegistrationURL"] }}" method="post">

                            <input type="hidden" name="data" value="{{ result["PreregistrationData"] }}" />
                            <input type="hidden" name="accessKeyRef" value="{{ result["AccessKey"] }}" />
                            <input type="hidden" name="returnURL" value="{{ returnUrl }}" />

                            <label for="cardNumber">Numéro de la Carte Bancaire</label>
                            <input class="form-control" placeholder="xxxxxxxxxxxxxxxx" maxlength="16" type="text" name="cardNumber" value="" />
                            <div class="clear"></div>

                            <br>
                            <label for="cardExpirationDate">Date d'expiration</label>
                            <input class="form-control" placeholder="MMAA" maxlength="4" type="text" name="cardExpirationDate" value="" />
                            <div class="clear"></div>
                            <br>
                            <label for="cardCvx">CVV</label>
                            <input class="form-control" placeholder="xxx" maxlength="3" type="text" name="cardCvx" value="" />
                            <br>
                            <div class="text-center">
                                <input type="submit" class="btn my-4 text-white" style="background-color: #EDA200" value="Confirmer" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer id="footer-main">
    <div class="container">
        <div>
            <div class="copyright text-center text-muted text-black-50">
                &copy; 2022 <a class="font-weight-bold ml-1" style="color: #EDA200">CoiffMe</a>
            </div>
        </div>
    </div>
</footer>
</body>
</html>
